{{#if isGameStart}}
    {{#simple-modal-dialog}}
        {{#simple-modal-dialog.header}}Beginning of Game{{/simple-modal-dialog.header}}
        {{#simple-modal-dialog.body}}Click start to begin the game.{{/simple-modal-dialog.body}}
        {{simple-modal-dialog.footer
            acknowledgeDialog=(action attrs.startGame)}}
    {{/simple-modal-dialog}}
{{/if}}

{{#if isTurnStart}}
    {{#simple-modal-dialog}}
        {{#simple-modal-dialog.header}}Start of Turn{{/simple-modal-dialog.header}}
        {{#simple-modal-dialog.body}}Click begin to start the turn.{{/simple-modal-dialog.body}}
        {{simple-modal-dialog.footer
            acknowledgeDialog=(action attrs.startTurn)}}
    {{/simple-modal-dialog}}
{{/if}}