{{#flyout-panel title="Player section" position="bottom-left"}}
    {{player-section.resource-display game=game}}
    <div class="hand card-row">
        {{#each hand as |card index|}}
            <div class="card-slot {{index}}">
                {{interactive-card card=card}}
                <button class="select-card" {{action "playCard" card}}>Play</button>
            </div>
        {{/each}}
    </div>
{{/flyout-panel}}

{{#if showDialogPrompt}}
    {{#simple-modal-dialog cancelDialog=(action cancelDialog)}}
        {{simple-modal-dialog.header label="Select Card Option"}}
        {{#simple-modal-dialog.body}}
            <div class="card-options">
                {{#each selectCardOptions as |option index|}}
                    <button class="option" {{action chooseCardOption index}}>
                        {{option}}
                    </button>
                {{/each}}
            </div>
        {{/simple-modal-dialog.body}}
        {{simple-modal-dialog.footer
            cancelDialog="Cancel"
            cancelDialog=(action cancelDialog)}}
    {{/simple-modal-dialog}}
{{/if}}
